---
interface Props {
  text: string;
  link: string;
}
const { text, link } = Astro.props;
---

<a
  href={link}
  class="text-[#A9D0B6] text-xl text-center font-bold py-4 px-8 rounded-xl border-2 border-[#A9D0B6] hover:bg-[#A9D0B6] hover:text-[#1F3A6D] transition duration-300 ease-in-out"
>
  {text}
</a>
