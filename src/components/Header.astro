---
interface Props {
  title: string;
  subtitle: string;
}
const { title, subtitle } = Astro.props;
---

<header
  class="bg-[#1F3A6D] w-screen h-screen flex justify-center
items-center px-12"
>
  <section
    class="max-w-screen-xl flex flex-col items-start justify-center gap-12"
  >
    <h1 class="text-8xl max-xl:text-6xl font-bold text-white">
      {title}
    </h1>
    <h2 class="text-2xl max-xl:text-lg text-[#E0E0E0]">{subtitle}</h2>

    <slot />
  </section>
</header>
