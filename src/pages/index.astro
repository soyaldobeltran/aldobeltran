---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import FirtsBtn from "../components/FirtsBtn.astro";
import SecondBtn from "../components/SecondBtn.astro";
import About from "../components/About.astro";
import Perfil from "../../public/images/perfil.webp";
import Image from "astro/components/Image.astro";
---

<Layout
  description="Bienvenido al Sitio Oficial de Aldo Beltrán"
  title="Aldo Beltrán"
>
  <Header
    title="Diseño marcas que comunican, conectan y convierten"
    subtitle="Branding, diseño digital y estrategia para marcas personales"
  >
    <article class="flex gap-8">
      <FirtsBtn text="Contáctame" link="#" />
      <SecondBtn text="Portafolio" link="#" />
    </article>
  </Header>
  <About
    title="Sobre Mi"
    text="Soy Aldo Beltrán, diseñador y estratega digital. Ayudo a emprendedores a construir marcas que conectan de verdad. Diseño con propósito, claridad y elegancia."
  >
    <Image
      class="w-[250px] max-sm:w-full h-full"
      src={Perfil}
      alt="Fotografía en blanco y negro de Aldo Beltrán"
      class="w-full h-full object-cover"
      loading="lazy"
    />
  </About>
</Layout>
